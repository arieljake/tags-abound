form(method="post",action="/register")
  label(for="username") Username
  input(type="text",id="username",name="username",placeholder="Username",required, ng-model="registerInfo.username")
  br
  label(for="password") Password
  input(type="password",id="password",name="password",placeholder="Password",required, ng-model="registerInfo.password")
  br
  label(for="password2") Retype Password
  input(type="password",id="password2",name="password2",placeholder="Retype Password",required, ng-model="registerInfo.password2")
  br
  input(type="button",id="registerButton", value="Register", ng-click="register()")